<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Default state (not current day) -->
    <item>
        <shape android:shape="oval">
            <solid android:color="@android:color/background_dark" />
            <size android:width="36dp" android:height="36dp" />
        </shape>
    </item>

    <!-- Current day state (will be applied programmatically) -->
    <item android:state_selected="true" tools:ignore="StateListReachable">
        <shape android:shape="oval">
            <solid android:color="@color/current_day_bg_color" />
            <size android:width="36dp" android:height="36dp" />
        </shape>
    </item>
</selector>