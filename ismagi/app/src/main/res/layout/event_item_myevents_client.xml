<?xml version="1.0" encoding="utf-8"?>


    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp"
    >
        <LinearLayout

                android:id="@+id/parent_linear"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp"
        >
            <ImageView
                    android:id="@+id/imageEventMyeventsClients"
                    android:layout_width="350dp"
                    android:layout_height="200dp"
                    android:scaleType="centerCrop"
                    android:contentDescription="Image de l'événement"
                   android:src="@drawable/picture_bg"/>

            <TextView
                    android:id="@+id/titreMyEventsClient"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titre"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginTop="8dp"/>

            <TextView
                    android:id="@+id/dateDeEvenmentClietns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Date De Events"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

            <TextView
                    android:id="@+id/lieuEventsClients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lieu"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>



            <TextView
                    android:id="@+id/prixEventsCleint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Prix"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>

            <TextView
                    android:id="@+id/confirmationCleint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Confirme"
                    android:textSize="14sp"
                    android:layout_marginTop="4dp"/>
            <Button
                    android:id="@+id/btngetticketClients"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="get ticket"
                    android:textSize="20sp"
                    android:layout_marginTop="20dp"
                    android:layout_marginHorizontal="5dp"
                    android:layout_marginBottom="10dp"/>





        </LinearLayout>



    </androidx.cardview.widget.CardView>
