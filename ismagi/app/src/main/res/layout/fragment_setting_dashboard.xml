<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".fragments.adminfragments.SettingDashboardFragment">

    <LinearLayout
            android:layout_width="match_parent"
            android:paddingTop="10dp"
            android:orientation="vertical"
            android:layout_height="match_parent">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="10dp"
                android:paddingBottom="16dp"
                android:background="#ffffff"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_gravity="center"
                android:paddingTop="8dp">
            <ImageView
                    android:id="@+id/imageEventadmin"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_marginStart="10dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    android:contentDescription="Image de l'événement"
                    android:src="@drawable/user_2"/>

            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/profileadmindasborad"
                    android:hint="Thomas Dubois"
                    android:layout_gravity="center"
                    android:textSize="20sp"
                    android:layout_marginStart="10sp"
                    android:textStyle="bold"
                    android:textColor="?android:attr/textColorPrimary"/>

            <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:id="@+id/profileadmin"
                    android:layout_height="wrap_content"
                    android:hint="profile@gmail.com"
                    android:textSize="14sp"
                    android:textColor="?android:attr/textColorSecondary"
                    android:paddingTop="4dp"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:paddingTop="10dp"
                android:orientation="vertical"
                android:layout_height="match_parent">



            <Button
                    android:id="@+id/btnLogout"
                    android:layout_marginHorizontal="15dp"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:text="Se déconnecter"
                    android:layout_marginTop="200dp"/>
        </LinearLayout>


    </LinearLayout>



</FrameLayout>